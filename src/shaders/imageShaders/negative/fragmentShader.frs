#version 400 core
in vec2 vTexCoords;

out vec4 fFragColor;

uniform sampler2D texture1;
uniform float uT;

void main(){
	//get the original color
	vec3 irgb = texture( texture1, vTexCoords ).rgb;
	//get the negative of the image
	vec3 neg = vec3(1.,1.,1.) - irgb;
	fFragColor = vec4( mix( irgb, neg, uT ), 1. );
}
